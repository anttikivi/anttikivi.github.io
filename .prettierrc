{
    "$schema": "https://www.schemastore.org/prettierrc.json",
    "plugins": ["prettier-plugin-packagejson", "prettier-plugin-go-template", "@awmottaz/prettier-plugin-void-html"],
    "arrowParens": "always",
    "bracketSpacing": true,
    "printWidth": 120,
    "semi": true,
    "singleQuote": false,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "overrides": [
        {
            "files": ["*.html"],
            "options": {
                "parser": "go-template",
                "goTemplateBracketSpacing": true,
                "bracketSameLine": true
            }
        }
    ]
}
