---
permalink: /sitemap.xml
eleventyExcludeFromCollections: true
---
<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9" xmlns:xhtml="http://www.w3.org/1999/xhtml">
  {%- for page in collections.all %}
  {%- if not page.data.excludeFromSitemap and not page.url.endsWith("css") %}
  <url>
    <loc>{{ site.url }}{{ page.url }}</loc>
    <lastmod>{{ page.date.toISOString() }}</lastmod>
    <changefreq>{{ page.data.changefreq | default("monthly") }}</changefreq>
    <priority>{{ page.data.priority | default(0.7) }}</priority>
    <xhtml:link href="{{ site.url }}{{ page.url }}" hreflang="{{ page.page.lang | lang }}" rel="alternate" />
    {% for link in page.url | locale_links -%}
    <xhtml:link href="{{ site.url }}{{ link.url }}" hreflang="{{ link.lang | lang }}" rel="alternate" />
    {% endfor -%}
    {% if page.page.lang === site.defaultLanguage -%}
    <xhtml:link href="{{ site.url }}{{ page.url }}" hreflang="x-default" rel="alternate" />
  {% else -%}
  {% for link in page.url | locale_links -%}
  {% if link.lang === site.defaultLanguage -%}
    <xhtml:link href="{{ site.url }}{{ page.url }}" hreflang="x-default" rel="alternate" />
  {% endif -%}
  {% endfor -%}
  {% endif -%}
  </url>
  {%- endif %}
  {%- endfor %}
</urlset>
