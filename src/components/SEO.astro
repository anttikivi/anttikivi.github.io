---
type Image = {
    alt: string;
    src: string;
};

type SEOMetadata = {
    alternateURLs?: { locale: string; url: URL | string }[];
    canonicalURL?: URL | string | null;
    defaultLocale: string;
    description: string;
    image: Image;
    locale?: string;
    name: string;
    title: string;
};

type OpenGraph = Partial<Omit<SEOMetadata, "alternateURLs">> & {
    alternateLocales?: string[];
    type?: string;
};

interface Props extends SEOMetadata {
    og?: OpenGraph;
}

const {
    alternateURLs,
    canonicalURL = new URL(Astro.url.pathname, Astro.site),
    defaultLocale,
    description,
    image,
    locale = Astro.props.defaultLocale,
    name,
    title,
} = Astro.props;

const og = {
    alternateLocales: alternateURLs
        ? alternateURLs
              .filter((alt) => alt.locale !== locale)
              .map((alt) =>
                  // NOTE: This is a really naive way to handle this but works
                  // for the locales I need.
                  alt.locale.includes("-") ? alt.locale.replace("-", "_") : `${alt.locale}_${alt.locale.toUpperCase()}`,
              )
        : [],
    canonicalURL,
    description,
    image,
    locale: locale.includes("-") ? locale.replace("-", "_") : `${locale}_${locale.toUpperCase()}`,
    name,
    type: "website",
    title,
    ...Astro.props.og,
} satisfies OpenGraph;

const defaultURL = alternateURLs ? alternateURLs.find((alt) => alt.locale === defaultLocale) : undefined;

/**
 * Enforce some standard canonical URL formatting across the site.
 */
function formatCanonicalURL(url: string | URL): string {
    const path = url.toString();
    const hasQueryParams = path.includes("?");
    // If there are query params, make sure the URL has no trailing slash
    if (hasQueryParams) {
        path.replace(/\/?$/, "");
    }
    // otherwise, canonical URL always has a trailing slash
    return path.replace(/\/?$/, hasQueryParams ? "" : "/");
}
---

{canonicalURL && <link rel="canonical" href={formatCanonicalURL(canonicalURL)} />}
{
    alternateURLs &&
        alternateURLs.map((alt) => <link rel="alternate" hreflang={alt.locale} href={formatCanonicalURL(alt.url)} />)
}
{defaultURL && <link rel="alternate" hreflang="x-default" href={defaultURL.url} />}

<meta name="description" content={description} />

<meta property="og:title" content={og.title} />
<meta property="og:type" content={og.type} />
{og.canonicalURL && <meta property="og:url" content={formatCanonicalURL(og.canonicalURL)} />}
<meta property="og:locale" content={og.locale} />
{og.alternateLocales && og.alternateLocales.map((alt) => <meta property="og:locale:alternate" content={alt} />)}
<meta property="og:description" content={og.description} />
<meta property="og:site_name" content={og.name} />
{og.image && <meta property="og:image" content={og.image.src} />}
{og.image && <meta property="og:image:alt" content={og.image.alt} />}
